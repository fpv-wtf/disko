<mmsinputmaps>
    <!-- this is a map for the avermedia remote -->
    <map name="default">
        <key name="return"       mapto="return" />
        <key name="small_m"      mapto="menu"/>
        <key name="cursor_left"  mapto="cursor_left" />
        <key name="cursor_right" mapto="cursor_right" />
        <key name="cursor_down"  mapto="cursor_down" />
        <key name="cursor_up"    mapto="cursor_up" />
        <key name="small_i"      mapto="small_i" />
        <key name="small_f"      mapto="small_f" />
        <key name="small_s"      mapto="small_s" />
        <key name="escape"     	 mapto="power" />

        <!-- mixer keys -->
        <key name="page_up"      mapto="volume_up" />
        <key name="page_down"    mapto="volume_down" />
        <key name="end"          mapto="mute" />

        <!-- TV/DVD/Video/Audio playback controlling keys -->
        <key name="space"        mapto="playpause" />
        <key name="f12"          mapto="stop" />
        <key name="cursor_left"  mapto="previous" />
        <key name="cursor_right" mapto="next" />
        <key name="cursor_down"  mapto="channel_down" />
        <key name="cursor_up"    mapto="channel_up" />
        <key name="return"       mapto="ok" />
        <key name="f5"           mapto="language" />
        <key name="f6"           mapto="subtitle" />
        <key name="f12"          mapto="eject" />
        <key name="small_i"      mapto="info" />
        <key name="small_f"      mapto="fastforward" />
        <key name="small_s"      mapto="slow" />
        <key name="small_c"      mapto="channel" />

        <!-- action buttons -->
        <key name="f1"       mapto="red" />
        <key name="f2"       mapto="green" />
        <key name="f3"       mapto="yellow" />
        <key name="f4"       mapto="blue" />

    </map>
</mmsinputmaps>
